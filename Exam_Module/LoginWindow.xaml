<Window x:Class="Exam_Module.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam_Module"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Background="LightSeaGreen">
        <Border Background="LightCyan" Height="250" Width="400">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
                <TextBlock Text="Login" FontSize="16" FontWeight="Black"/>
                <TextBox x:Name="LoginBox" Margin="0 2 0 0"/>
                <TextBlock Text="Password" FontSize="16" FontWeight="Black"/>
                <PasswordBox x:Name="PassBox" Margin="0 2 0 0"/>

                <Button Content="Login" Margin="0 10 0 0" Click="Login_CLick" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
